.search_block {
	display: flex;
	flex-direction: row;
	padding: 0 20rpx 20rpx 20rpx;
	background-color: #F8F8F8;
	position: fixed;
	top: 100;
	z-index: 9;
}
.search_icon_wrapper {
	display: flex;
	flex-direction: column;
	justify-content: center;
	padding: 0 10rpx;
	background-color: #eaeaea;
}
.search_icon {
	width: 40rpx;
	height: 40rpx;
}
.search_text {
	font-size: 14px;
	height: 60rpx;
	width: 650rpx;
	background-color: #eaeaea;
}
.movie_list {
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	padding: 72rpx 10rpx 0 10rpx;
	background-color: #F7F7F7;
}
.movie_wrapper {
	display: flex;
	flex-direction: column;
	padding: 10rpx;
	box-sizing: border-box;
	border-radius: 2%;
	background-color: #fff;
}
.movie_title {
	width: 200rpx;
	color: #808080;
	text-align: center;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
